{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}